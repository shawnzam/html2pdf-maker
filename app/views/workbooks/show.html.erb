<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
    <%= @workbook.title %>
</p>
<p>
<%= link_to 'bookmark file', @workbook.bookmark.url  %>

</p>


<%= form_tag({:action => "choose", :controller => "workbooks", :workbook_id => @workbook.id}, :html => {:multipart => true }) do |f| %>
 	<ul>
 	<% @workbook.urls.each do |u| %>
    <li>
      <%= check_box_tag "url_ids[]", u.id, (u.use ?  true : false ) %>
      <%= u.url %>
      <% if u.use?%>
      	<strong>use</strong>
      <% end %>	
    </li>
  <% end %>
 </ul>
  <%= submit_tag "Create PDF" %>
<% end %>
<% if @workbook.pdf? %>
    <p>
    <%= link_to 'pdf file', @workbook.pdf.url(:original, false), :target => "_blank"  %>
    </p>
<% end %>



<%= link_to 'Back', workbooks_path %>
